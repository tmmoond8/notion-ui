{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "react",
      "declaration": true,
      "declarationDir": "build/types",  
      "noImplicitAny": true,
      "outDir": "dist"
    },
    "include": [
      "../src"
    ],
    "exclude": [
        "node_modules", "**/*.stories.tsx"
    ]
  }